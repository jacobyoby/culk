# Environment variables for AI Photo Culling app

# Node environment (development, production, test)
NODE_ENV=production

# Port for the application
PORT=3000

# Next.js
NEXT_TELEMETRY_DISABLED=1

# PWA Settings
NEXT_PUBLIC_APP_NAME="AI Photo Culling"
NEXT_PUBLIC_APP_DESCRIPTION="Local-first PWA for culling RAW/JPEG files"

# Feature Flags
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_FACE_DETECTION=true
NEXT_PUBLIC_ENABLE_AUTO_GROUPING=true

# Performance Settings
NEXT_PUBLIC_MAX_CONCURRENT_WORKERS=4
NEXT_PUBLIC_IMAGE_CACHE_SIZE_MB=500
NEXT_PUBLIC_INDEXEDDB_VERSION=1

# Default Thresholds
NEXT_PUBLIC_SIMILARITY_THRESHOLD=15
NEXT_PUBLIC_BLUR_THRESHOLD=100
NEXT_PUBLIC_MIN_FACE_CONFIDENCE=0.7